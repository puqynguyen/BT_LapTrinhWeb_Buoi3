@model IEnumerable<KTGiuaKy.Models.SinhVien>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>TRANG SINH VIÊN</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add Sinh Viên</a>
</p>
<hr />
<table>
    <thead>
        <tr>
            <th>MaSV</th>
            <th>HoTen</th>
            <th>GioiTinh</th>
            <th>NgaySinh</th>
            <th>Hinh</th>
            <th>MaNganh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSV</td>
                <td>@item.HoTen</td>
                <td>@item.GioiTinh</td>
                <td>@item.NgaySinh.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Hinh))
                    {
                        <img src="@item.Hinh" alt="Hinh" style="width: 100px; height: auto;" />
                    }
                </td>
                <td>@item.MaNganh</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaSV" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.MaSV" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MaSV" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>