@model IEnumerable<KTGiuaKy.Models.SinhVien>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2 class="text-center mb-4">QUẢN LÝ SINH VIÊN</h2>
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-2"></i>Thêm Sinh Viên</a>
    </div>
    <hr class="my-4">
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Mã SV</th>
                    <th>Họ Tên</th>
                    <th>Giới Tính</th>
                    <th>Ngày Sinh</th>
                    <th>Hình</th>
                    <th>Mã Ngành</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaSV</td>
                        <td>@item.HoTen</td>
                        <td>@item.GioiTinh</td>
                        <td>@item.NgaySinh.ToShortDateString()</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Hinh))
                            {
                                <img src="@item.Hinh" alt="Hinh" class="img-thumbnail" style="width: 80px; height: auto;" />
                            }
                        </td>
                        <td>@item.MaNganh</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.MaSV" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Chi tiết</a>
                                <a asp-action="Edit" asp-route-id="@item.MaSV" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.MaSV" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>