@model KTGiuaKy.Models.SinhVien
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2 class="text-center mb-4">XÓA SINH VIÊN</h2>
    <div class="alert alert-warning shadow-sm" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i> Bạn có chắc chắn muốn xóa sinh viên này?
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Thông Tin Sinh Viên</h4>
            <hr class="my-4">
            <dl class="row">
                <dt class="col-sm-3">Mã SV</dt>
                <dd class="col-sm-9">@Model.MaSV</dd>
                <dt class="col-sm-3">Họ Tên</dt>
                <dd class="col-sm-9">@Model.HoTen</dd>
                <dt class="col-sm-3">Giới Tính</dt>
                <dd class="col-sm-9">@Model.GioiTinh</dd>
                <dt class="col-sm-3">Ngày Sinh</dt>
                <dd class="col-sm-9">@Model.NgaySinh.ToShortDateString()</dd>
                <dt class="col-sm-3">Hình</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Hinh))
                    {
                        <img src="@Model.Hinh" alt="Hinh" class="img-thumbnail" style="width: 80px; height: auto;" />
                    }
                </dd>
                <dt class="col-sm-3">Mã Ngành</dt>
                <dd class="col-sm-9">@Model.MaNganh</dd>
            </dl>

            <form asp-controller="SinhVien" asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.MaSV" />
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger shadow-sm">
                        <i class="fas fa-trash me-2"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>