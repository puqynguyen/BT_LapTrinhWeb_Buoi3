@model IEnumerable<Buoi6.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h2>Quản lý sản phẩm</h2>
<p><a asp-action="Create">Thêm sản phẩm</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Chủ đề</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>