@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link">Xin chào, @UserManager.GetUserName(User)!</span>
        </li>
        <li class="nav-item">
            <form asp-page="/Logout" method="post" class="form-inline">
                <button type="submit" class="nav-link btn btn-link">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Login">Đăng nhập</a>
        </li>
    }
</ul>