@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Xin chào, @UserManager.GetUserName(User)!</span>
        </li>
        <li class="nav-item">
            <form asp-page="/Logout" method="post" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark border-0">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Login">Đăng nhập</a>
        </li>
    }
</ul>