@model Buoi6.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h4>THÊM MỚI SẢN PHẨM</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <!-- QUAN TRỌNG: Phải có method="post" và enctype="multipart/form-data" -->
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Tên sản phẩm *</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Giá *</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="1" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Mô tả *</label>
                <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Hình ảnh *</label>
                <!-- QUAN TRỌNG: name phải khớp với parameter trong controller -->
                <input type="file" name="imageFile" class="form-control" accept="image/*" required />
                <small class="form-text text-muted">Chọn file ảnh (jpg, png, gif). Tối đa 5MB</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label">Danh mục *</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" required>
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

<!-- JavaScript để debug file upload -->
<script>
    document.querySelector('input[type="file"]').addEventListener('change', function(e) {
        var file = e.target.files[0];
        if (file) {
            console.log('File selected:', file.name);
            console.log('File size:', file.size);
            console.log('File type:', file.type);

            if (file.size > 5 * 1024 * 1024) { // 5MB
                alert('File quá lớn! Vui lòng chọn file nhỏ hơn 5MB');
                e.target.value = '';
            }
        }
    });

    document.querySelector('form').addEventListener('submit', function(e) {
        var fileInput = document.querySelector('input[type="file"]');
        var file = fileInput.files[0];

        console.log('Form submitting...');
        console.log('File at submit:', file);

        if (!file) {
            alert('Vui lòng chọn hình ảnh!');
            e.preventDefault();
            return false;
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}